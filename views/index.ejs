<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Keyboard Table Transform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1 class="mt-3 mb-3 text-center">Keyboard Layout Table Transform</h1>
    <section class="text-center">
        <form action="/result" method="POST">
          <fieldset>
            <input id="key_input" type="text" name="key" placeholder="e.g. HV5 or hv5" />
            <input type="submit" value="Generate" />
          </fieldset>
        </form>
    </section>
    <div class="container mt-4 mb-4 col-7">
        <table class="table text-center">
            <% table.forEach(tblRow => { %>
                <tr>
                <% tblRow.forEach(tblCol => { %>
                    <td class="border-3"><%= tblCol %></td>
                <% }) %>
                </tr>
            <% }) %>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>